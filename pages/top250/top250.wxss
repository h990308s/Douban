/* pages/top250/top250.wxss */
.top{
}
.top image{
  width: 100%;
  height: 400rpx;
}

.jindu{
  display: flex;
  justify-content:space-between;
  padding: 0 40rpx;
  margin-top: 30rpx;
}
.kang{
  display: flex;
  font-size: 26rpx;
}
.kang text:nth-child(1){
  padding-bottom: 10rpx;
  border-bottom: 3px solid #ededed;
}
.kang text:nth-child(2){
  color: #d4d4d4;
  margin-left: 10rpx;
}
.jindu button{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  border-radius: 40px;
  background: #fcbf64;
  margin-right: 0;
}

.xunh{
  padding:40rpx 40rpx 0;
}
.shang{
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #9e5f00;
  font-size: 26rpx;
  text-align: center;
  border-radius: 5rpx;
  background: #fecd81;
}
.zhong{
  display: flex;
  margin-top: 20rpx;
}
.zhong image{
  width: 150rpx;
  height: 200rpx;
  border: 1px solid #d5cec4;
  border-radius: 5rpx;
}
.zhong_c{
  width: 52%;
  margin-left: 30rpx;
  border-right:1px dashed #c0c0c0;
}
.zhong_c1{
  font-weight: 700;
}
.zhong_c2{
  font-size: 24rpx;
  color: #c0c0c0;
  padding: 10rpx 0;
}
.zhong_c2 van-rate{
  display: inline-block;
}
.van-rate__item{
  padding: 0 1px !important;
}
.zhong_c3{
  font-size: 26rpx;
  color: #c0c0c0;
  padding-right: 30rpx;
}

.zhong_r{
  padding-top: 6%;
}
.zhong_r van-icon{
  margin-left: 62rpx;
}
.kanguo{
  font-size: 28rpx;
  color: #ffab2c;
  margin-left: 50rpx;
}


.xia{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 30rpx;
  color: #9b9b9b;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-radius: 5rpx;
}
.tiaozi{
  height: 20rpx;
  margin: 50rpx -40rpx 0;
  background: #ededed;
}